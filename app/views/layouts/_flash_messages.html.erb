<% if notice && notice.is_a?(Array) %>
  <% notice.each do |n| %>
    <p class="alert alert-success"> <%= n %> </p>
  <% end %>
<% elsif notice && notice.is_a?(String) %>
    <p class="alert alert-success"> <%= notice %> </p>
<% end %>

<% if alert && alert.is_a?(Array) %>
  <% alert.each do |a| %>
    <p class="alert alert-danger"> <%= a %> </p>
  <% end %>
<% elsif notice && alert.is_a?(String) %>
    <p class="alert alert-danger"> <%= alert %> </p>
<% end %>
