<div class="full-screen">
<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
    <div class="images-section pt-3 d-none d-lg-block" style="margin-top: 0px;"></div>
    <div class="login-section pt-3">
            <div class="card text-center pt-5" style="width: 23rem;">
                <%= image_tag "logo.png", class: "card-img-top" %>
                <div class="card-body">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="mb-3 mt-4">
                        <%= f.email_field :email, class: "form-control", placeholder: "Phone number, username or email" %>
                        </div>
                <div class="mb-3"> 
                        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                </div>
             <%= f.submit "Log In", class: "btn btn-primary w-100" %>
             <% end %>  

                <div class="d-flex align-items-center mt-4">
                    <div class="line"></div>
                    <h2 class="line-text">OR</h2>
                    <div class="line"></div>
                </div>
                <a href="#" class="d-block mt-4 text-decoration-none fw-bold">
                <%= image_tag("facebook.png", class: "facebook") %>
                Log in with Facebook
                </a>

                <% if notice %>
                <p class="notice"><%= notice %></p>
                <% elsif alert %>
                <p class="alert"><%= alert %></p>
                <% end %>
                <a href="#" class="fs-6 d-block my-4 text-decoration-none"> Forgot password? </a>
            </div>
        </div>
        <div class="card text-center py-2 mt-3" style="width: 23rem;">
            <div class="card-text">
                Don't have an account?
              <%= link_to "Sign Up", new_user_registration_path, class: "fs-6 my-4 text-decoration-none" %>
            </div>
        </div>
    </div>
</div>
</div>

<style>
.card {
    top: 50px;
    left: 20px;
}
